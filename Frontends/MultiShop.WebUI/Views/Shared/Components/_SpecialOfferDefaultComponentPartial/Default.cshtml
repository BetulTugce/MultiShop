@using MultiShop.WebUI.Models.ViewModels.Catalog.SpecialOffer
@model List<SpecialOfferListVM>

<!-- Special Offer Start -->
<div class="col-lg-4">
    @for (int i = 0; i < 2; i++)
    {
        <div class="product-offer mb-30" style="height: 200px;">
            <img class="img-fluid" src="@Model[i].ImageUrl" alt="">
            <div class="offer-text">
                <h6 class="text-white text-uppercase">@Model[i].Title</h6>
                <h3 class="text-white mb-3">@Model[i].SubTitle</h3>
                <a href="" class="btn btn-primary">@Model[i].ButtonText</a>
            </div>
        </div>
    }
</div>
<!-- Special Offer End -->