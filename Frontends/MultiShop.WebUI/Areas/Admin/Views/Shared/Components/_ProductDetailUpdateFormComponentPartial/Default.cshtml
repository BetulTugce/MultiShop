@using MultiShop.WebUI.Models.ViewModels.Catalog.ProductDetail
@model ProductDetailUpdateVM
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                @* <h4>Ürün Detayları</h4> *@
                <div class="form-group">
                    <form method="post" asp-area="Admin" asp-action="UpdateProductDetail" asp-controller="ProductDetail">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <input type="hidden" name="ProductId" value="@Model.ProductId" />
                        <label>Detaylı Açıklama</label>
                        <textarea rows="5" class="form-control" asp-for="Description"></textarea>
                        <br />
                        <label>Ürün Bilgisi</label>
                        <textarea rows="5" class="form-control" asp-for="Info"></textarea>
                        <br />
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

